<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/description_card"
    android:layout_width="match_parent"
    app:cardElevation="2dp"
    android:layout_marginStart="@dimen/s_margin"
    android:layout_marginTop="@dimen/s_margin"
    android:layout_marginEnd="@dimen/s_margin"
    android:layout_marginBottom="@dimen/s_margin"
    android:foregroundTint="@color/colorAccentLight"
    android:layout_height="wrap_content"
    android:padding="@dimen/xs_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/description_icon"
            android:layout_width="@dimen/icon_xsmall"
            android:layout_height="@dimen/icon_xsmall"
            android:layout_gravity="center"
            android:layout_margin="@dimen/xs_margin"
            app:srcCompat="@drawable/ic_mode_edit"
            android:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/description_text"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_margin="@dimen/xs_margin"
            android:layout_marginStart="@dimen/xs_margin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_secondary"
            tools:text="La comunicación ha sido muy buena en este sprint. ¡Hay que seguir así equipo!" />


        <ImageView
            android:id="@+id/remove_icon"
            android:layout_width="@dimen/icon_xsmall"
            android:layout_height="@dimen/icon_xsmall"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/xs_margin"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:tint="@color/colorAccent" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>